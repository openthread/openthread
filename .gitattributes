# Auto normalize all files which appear to be text files.
*        text=auto

# Auto normalize files which are explicitly text
*.[ch]   text
*.[ch]pp text
*.txt    text
*.md     text
*.yml    text
*.html   text
*.py     text

# Files which are explicitly binary
*.gz     binary !eol
*.xz     binary !eol
*.bz2    binary !eol
*.tar    binary !eol
*.png    binary !eol
*.jpg    binary !eol
*.gif    binary !eol

# Files normalized to always keep Unix line endings
.default-version  eol=lf
bootstrap*        eol=lf
config.guess      eol=lf
config.status     eol=lf
configure         eol=lf
libtool           eol=lf
libtoolize        eol=lf
autoreconf        eol=lf
mkversion         eol=lf
*.sh              eol=lf
*-sh              eol=lf
*.m4              eol=lf
configure.ac      eol=lf
Makefile.am       eol=lf
Makefile.in       eol=lf
Makefile          eol=lf
