proc wait_for {command expected} {
    set result 0
    for {set i 0} {$i < 20} {incr i} {
        send "$command\n"
        expect {
            -re $expected {
                set result 1
            }
            timeout {
                # Do nothing
            }
        }
        if {$result == 1} {
            break
        }
    }
    if {$result == 0} {
        exit 1
    }
}

proc spawn_node {id} {
    if {[info exists ::env(RCP_COMMAND)] && $::env(RCP_COMMAND) != ""} {
        spawn $::env(OT_COMMAND) "spinel+hdlc+uart://$::env(RCP_COMMAND)?forkpty-arg=$id"
    } else {
        spawn $::env(OT_COMMAND) $id
    }
    expect_after {
        timeout { exit 1 }
    }
    return $spawn_id
}

proc dispose {} {
    send "\x04"
    expect eof
}
