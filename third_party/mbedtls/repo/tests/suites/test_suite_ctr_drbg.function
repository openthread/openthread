{
    ctr_drbg_validate_internal( RESEED_SECOND, add_init,
                                entropy->len / 2, entropy,
                                add_reseed, add1, add2,
                                result_string );
    goto exit; // goto is needed to avoid warning ( no test assertions in func)
}
