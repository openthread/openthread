    mbedtls_mpi N, P, Q, E;
    size_t msg_len;
    rnd_buf_info info;

    info.length = unhexify( rnd_buf, salt );
    info.buf = rnd_buf;

    mbedtls_mpi_init( &N ); mbedtls_mpi_init( &P );
    mbedtls_mpi_init( &Q ); mbedtls_mpi_init( &E );
    mbedtls_rsa_init( &ctx, MBEDTLS_RSA_PKCS_V15, hash );

    memset( message_str, 0x00, 1000 );
