set -e
set -o pipefail

readonly SYSTEM_TRIPLET="$(third_party/nlbuild-autotools/repo/third_party/autoconf/config.guess)"

setup() {
    if [[ -n "${RADIO_DEVICE}" && "${VIRTUAL_TIME}" = 1 ]]; then
        VIRTUAL_TIME_UART=1 make -f examples/Makefile-posix
    else
        make -f examples/Makefile-posix
    fi

    if [[ -n "${RADIO_DEVICE}" ]]; then
        make -f src/posix/Makefile-posix
    fi
}

build() {
    rm -rf "build/${SYSTEM_TRIPLET}" || true

    if [[ -n "${RADIO_DEVICE}" ]]; then
        rm -rf "build/posix/${SYSTEM_TRIPLET}" || true
    fi

    ./bootstrap
    setup
}

print_usage() {
    echo "USAGE: $0 OPTIONS COMMAND

OPTIONS:
    -V          Test using virtual time
    -N          Test using NCP mode node
    -R          Test posix-app with radio-only mode node

COMMAND:
    cert        Run a single thread-cert test. OPTIONS should be the same as
                those given to setup or update.
    setup       Build project for running tests.
    update      Clean, bootstrap and build project for running tests.
    help        Print this help.

EXAMPLES:
    $0 -VNR rebuild
    $0 -VNR cert tests/scripts/thread-cert/Cert_5_1_01_RouterAttach.py"
}

main()
{
    export NODE_TYPE=sim
    export VERBOSE=1
    export top_builddir="build/${SYSTEM_TRIPLET}"

    while getopts VNR OPT; do
        case "${OPT}" in
            V)
                export VIRTUAL_TIME=1
                ;;
            N)
                export NODE_TYPE=ncp-sim
                ;;
            R)
                export RADIO_DEVICE="build/${SYSTEM_TRIPLET}/examples/apps/ncp/ot-ncp-radio"
                export OT_CLI_PATH="build/posix/${SYSTEM_TRIPLET}/src/posix/ot-cli"
                export OT_NCP_PATH="build/posix/${SYSTEM_TRIPLET}/src/posix/ot-ncp"
                ;;
        esac
    done
    shift $((OPTIND-1))

    [[ -n "${RADIO_DEVICE}" ]] && echo "Using radio-only mode" || echo "Using full mode"
    [[ "${NODE_TYPE}" = "ncp-sim" ]] && echo "Using NCP mode" || echo "Using CLI mode"
    [[ "${VIRTUAL_TIME}" = 1 ]] && echo "Using virtual time" || echo "Using real time"

    case "$1" in
        setup)
            setup
            ;;
        update)
            update
            ;;
        cert)
            PYTHONUNBUFFERED=1 python "$2"
            ;;
        *)
            print_usage
            ;;
    esac
}

main "$@"
